{
    "version": "2.0.0",
    "tasks": [
        //https://doroshenko-viktor.github.io/notes/editors/vs-code/vs-code-tasks
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/std:c++latest",
                "/Zi",
                "/EHsc",
                "/experimental:module",
                "/Fo:",
                //"${fileDirname}\\out\\",
                "${fileDirname}\\build\\test.obj",
                "/Fe:",
                //"${fileDirname}\\out\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\build\\test.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger.",
            "dependsOrder": "sequence",
            //"dependsOn": [ "init build", "Delete build"]
            "dependsOn": [ "init build"]
        },
        {
            "type": "shell",
            "label": "Delete build",
            "command": "rm",
            "args": [
                "${fileDirname}\\build\\*",
                "-r",
                "-force"
            ],
            //   "options": {
            //     "cwd": "${workspaceFolder}/client"
            //   }
        }
        ,
        {
            "label": "init build",
            "linux": {
                "command": "mkdir -p ./build/release"
            },
            "windows": {
                "type": "shell",
                "command": "mkdir",
                "args": ["${fileDirname}\\build", "-force"]
                //"command": "cmd",
                //"args": ["/C", "if not exist .\\build\\release mkdir .\\build\\release"]
                //"args": ["/C", "if not exist ${fileDirname}\\build mkdir ${fileDirname}\\build"]
            }
        },
        {
            "label": "Win Build active file",
            "dependsOrder": "sequence",
            "dependsOn": [
                "init build",
 //               "Delete build",
                "C/C++: cl.exe build active file"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
              "-fcolor-diagnostics",
              "-fansi-escape-codes",
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/test"
            ],
            "options": {
              "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            // "problemMatcher": {
            //     "base": "$gcc",
            //     "fileLocation": ["absolute"]
            // },
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "detail": "Task generated by Debugger."
          }
    ]
}